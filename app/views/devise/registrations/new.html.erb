<div class="col-md-offset-1 col-md-4 col-lg-offset-1 col-lg-4 col-sm-offset-1 col-sm-4">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: 'well'}) do |f| %>
  <%= devise_error_messages! %>

      <fieldset>
        <legend>Sign Up</legend>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :nick_name %>
      <%= f.input :email %>


    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
      <%= f.input :password %>
      <%= f.input :password_confirmation %>

      <%= f.button :submit, 'Sign up' , class: 'btn-success' %>
      </fieldset>
<% end %>

<%= render 'devise/shared/links' %>
</div>
<div class="col-md-5 col-lg-5 col-sm-5">
  <%= image_tag('logo.jpg', :alt => 'logo') %>
</div>
<div class="col-md-offset-1 col-lg-offset-1 col-sm-offset-1 col-md-10 col-lg-10 col-sm-10" style="padding-left: 0;padding-right: 0;">
  <h4 class="our-motto">Signing up is easier than saying <em>Llanfairpwllgwyngyllgogerychwyrndrobwllllantysiliogogogoch</em></h4>
</div>