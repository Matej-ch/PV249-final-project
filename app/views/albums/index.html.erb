<div class="col-lg-offset-1 col-lg-10 col-sm-12 col-xs-12 col-md-offset-1 col-md-12">
<h1>Galleries</h1>
  <hr>
</div>
<div class="col-lg-offset-1 col-lg-10 col-sm-12 col-xs-12 col-md-offset-1 col-md-12">

    <% @albums.each do |album| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to album_thumbnail(album), album_pictures_path(album) %>
          <div class="caption" style="text-align: center">
            <h3><%= album.title %></h3>
            <p><%=  link_to 'Check it out', album_pictures_path(@user, album), class: 'btn btn-success' %>
            <% if can_edit_album?(album) %>
              |<%= link_to 'Edit', edit_album_path(album), class: 'btn btn-warning' %>
              |<%= link_to 'Delete', album_path(album), method: :delete,
                           data: {confirm: 'are you sure?'}, class: 'btn btn-danger' %>
            <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

  <% if signed_in? && current_user == @user %>
<div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
    <%= link_to 'New Album', new_album_path, class: 'btn btn-primary' %>
  </div>
<% end  %>
</div>