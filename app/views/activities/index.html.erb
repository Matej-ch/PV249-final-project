<div class="col-lg-offset-1 col-lg-10 col-sm-12 col-xs-12 col-md-offset-1 col-md-12">
<h1>Activities</h1>

  <% @activities.each do |activity| %>
      <div class="media">
        <div class="media-left">
          <%= avatar_profile_link activity.user, {class:'img-rounded', width: '100px', height: '100px'},class: 'high-test' %>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= activity.user.full_name %></h4>

<%= render partial: "activities/#{activity.targetable_type.underscore}/#{activity.action}", locals: { item: activity } %>

        </div>
        <hr>
      </div>
  <% end %>
</div>
